<% if (title) { %>
<h1 class="acc-title"><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<div class="formDiv">
    <form id="registerForm" action="/account/register" method="post">
        <label for="firstname">First Name
            <input type="text" id="firstname" name="account_firstname" title="Your First Name" required value="<%= locals.account_firstname %>">
        </label>

        <label for="lastname">Last Name
            <input type="text" id="lastname" name="account_lastname" title="Your Last Name" required value="<%= locals.account_lastname %>">
        </label>

        <label for="email">Email
            <input type="email" id="email" name="account_email" title="Your Email" autocomplete="email" placeholder="name@domain.com" required value="<%= locals.account_email %>">
        </label>

        <label for="password">Password
            <input type="password" id="password" name="account_password" title="Passwords must be minimum 12 characters, with at least 1 capital letter, 1 number, and 1 special character" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
        </label>
        <span id="pswdBtn">Show Password</span>

        <button type="submit">Register</button>
    </form>
</div>

<script src="/js/script.js"></script>