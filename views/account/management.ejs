<% if (title) { %>
<h1 class="det-title"><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<div class="manDiv">
  <% if(locals.accountData.account_type == "Client") { %>
    <h2>Welcome <%- locals.accountData.account_firstname %>!</h2>
    <p class="updateLink"><a href="/account/wishlist/<%- locals.accountData.account_id %>">View Wishlist</a></p>
  <% } else if(locals.accountData.account_type == "Employee" || locals.accountData.account_type == "Admin") { %>
    <h2>Welcome <%- locals.accountData.account_firstname %>!</h2>
    <h3>Inventory Management</h3>
    <p class="updateLink"><a href="/inv/">Manage Inventory</a></p>
  <% } %>

  <p class="updateLink"><a href="/account/update/<%- locals.accountData.account_id %>">Update Account Information</a></p>
</div>