<% if (title) { %>
<h1 class="det-title"><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<div class="formDiv">
    <form id="updateForm" action="/account/update" method="post">
        <h3>Account Information</h3>
        <fieldset>
            <label for="firstname">First Name
                <input type="text" id="firstname" name="account_firstname" title="Your First Name" value="<%= locals.account_firstname %>" required>
            </label>

            <label for="lastname">Last Name
                <input type="text" id="lastname" name="account_lastname" title="Your Last Name" value="<%= locals.account_lastname %>" required>
            </label>

            <label for="email">Email
                <input type="email" id="email" name="account_email" title="Your Email" autocomplete="email" placeholder="name@domain.com" value="<%= locals.account_email %>" required>
            </label>

            <button type="submit">Update Info</button>

            <input type="hidden" name="account_id" 
            <% if(locals.account_id) { %> value="<%= locals.account_id %>" 
            <% } %>>

        </fieldset>
    </form>
</div>

<div class="formDiv">
    <form id="updatePassForm" action="/account/update-password" method="post">
        <h3>Change Password</h3>
        <p>This will change your current password. It must be minimum 12 characters, with at least 1 capital letter, 1 number, and 1 special character</p>
        <fieldset>
            <label for="password">Password
                <input type="password" id="password" name="account_password" title="Passwords must be minimum 12 characters, with at least 1 capital letter, 1 number, and 1 special character" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
            </label>
            <span id="pswdBtn">Show Password</span>

            <input type="hidden" name="account_id" 
            <% if(locals.account_id) { %> value="<%= locals.account_id %>" 
            <% } %>>

            <button type="submit">Change Password</button>
        </fieldset>
    </form>
</div>

<script src="/js/script.js"></script>